<div class="container body">
  <div class="main_container">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Measurements<small></small></h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <%= form_for @measurement_form, url: measurements_path, html: { class: 'form-horizontal form-label-left input_mask' } do |f| %>
              <div class="form-group">
                <%= f.label :date, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <%= f.text_field :date, class: 'form-control' %>
                </div>
              </div>

              <% @measurement_form.measurement_fields.each do |field| %>
                <div class="form-group">
                  <%= f.label field, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <%= f.text_field field, class: 'form-control' %>
                    <span>
                      <%= @last_measurements[field][:value] %> (<%= @last_measurements[field][:date] %>)
                    </span>

                    <%= content_tag :span, class: css_for_change(field, @last_measurements[field][:change]) do %>
                      Change: <%= number_with_precision @last_measurements[field][:change], precision: 1 %>
                    <% end %>

                    <%= link_to 'view history', measurements_path(type: field) %>
                  </div>
                </div>
              <% end %>

              <div class="ln_solid"></div>
              <div class="form-group">
                <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                  <%= f.submit :save, class: 'btn btn-success' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
