<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1>Log in</h1>

  <fieldset class="flex two-third">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'email' %>
    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      Remember me
    <% end %>
    <%= f.submit "Log in", class: 'btn btn-primary btn-block btn-flat' %>
    <% if devise_mapping.rememberable? -%>
    </fieldset>
  <% end -%>
  <div class="actions">
    <%- if devise_mapping.recoverable? %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'reset_pass' %>
    <% end -%>
  </div>

  <div class="separator">
    <%- if devise_mapping.registerable? %>
      <p class="change_link">New to site?
      <%= link_to 'Create Account', new_registration_path(resource_name), class: 'to_register' %>
      </p>
    <% end -%>
  </div>
<% end %>
