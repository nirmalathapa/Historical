<%= content_for :body_class, 'login' %>
<div class="login_wrapper">
  <section class="login_content">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <h1>Forgot password?</h1>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class:'form-control'%>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class:'btn btn-default' %>
      </div>

      <div class="separator">
        <%- if devise_mapping.registerable? %>
          <p class="change_link">Already have an account?
          <%= link_to "Log in", new_session_path(resource_name), class: 'to_register' %><br />
          </p>
        <% end -%>

        <div class="clearfix"></div>
        <br>
      </div>
      <% end %>
  </section>
</div>
