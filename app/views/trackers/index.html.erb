<h1>Trackers</h1>
<div class="flex">
    <div class="full">
        <table class="primary">
        <thead>
            <tr>
            <th>Name</th>
            <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @trackers.each do |tracker| %>
            <tr>
                <td>
                <%= tracker.name %>
                </td>
                <td>
                <%= link_to 'Show', tracker, class: 'pseudo button' %>
                <%= link_to 'Edit', edit_tracker_path(tracker), class: 'pseudo button' %>
                <%= link_to 'Measurement Types', tracker_measurement_types_path(tracker), class: 'pseudo button' %>
                <%= button_to 'Delete', tracker, method: :delete, data: { confirm: 'Are you sure?' }, class: 'error button' %>                  
                </td>
            </tr>
            <% end %>
        </tbody>
        </table>
        <br>
        <%= link_to 'New Tracker', new_tracker_path, class: 'button' %>      
    </div>
</div>
