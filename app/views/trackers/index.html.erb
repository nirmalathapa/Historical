<h1>Trackers</h1>
  <div class="flex">
    <div class="full">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @trackers.each do |tracker| %>
              <tr>
                <td>
                  <%= tracker.name %>
                </td>
                <td>
                  <%= link_to '<button type="button" class="show">Show</button>'.html_safe, tracker %>
                  <%= link_to '<button type="button" class="edit">Edit</button>'.html_safe, edit_tracker_path(tracker) %>
                  <%= link_to '<button type="button" class="delete">Delete</button>'.html_safe, tracker, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <%= link_to '<button type="button" class="measurement">Measurement Types</button>'.html_safe, tracker_measurement_types_path(tracker), class: 'btn btn-xs btn-default' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New Tracker', new_tracker_path, class: 'btn btn-primary btn-lg' %>      
    </div>
  </div>
