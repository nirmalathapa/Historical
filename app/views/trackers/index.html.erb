<h1>Trackers</h1>
<div class="box box-info">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class ="box-body"> 
        <table class="table table-striped"i>
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @trackers.each do |tracker| %>
              <tr>
                <td>
                  <%= tracker.name %>
                </td>
                <td>
                  <%= link_to 'Show', tracker, class: 'btn btn-success btn-xs' %>
                  <%= link_to 'Edit', edit_tracker_path(tracker), class: 'btn btn-info btn-xs' %>
                  <%= link_to 'Destroy', tracker, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %>
                  <%= link_to 'Measurement Types', tracker_measurement_types_path(tracker), class: 'btn btn-xs btn-default' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New Tracker', new_tracker_path, class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
</div>
