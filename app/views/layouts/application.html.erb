<!DOCTYPE html>
<html>
  <head>
    <title>Historical</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>
<body>
<nav>
    <%= link_to root_path, class: 'logo' do %>
        <%= content_tag :span, class: 'brand' do %>
            Historical
        <% end %>
    <% end %>
 
    <a href="#" class="brand">       
        <span class="icon is-small">
            <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
    </a>
 
    <div class="menu">
        <%= current_user.email %>
        <%= link_to 'Profile', edit_user_registration_path %>
        <%= link_to('Sign out', destroy_user_session_path, :method => :delete) %>
    </div>
</nav>

<main class="wrapper">
    <section class="flex two one-600">
        <aside class="third fourth-1000">
            <ul>
                <li>
                <%= link_to root_path  do %>
                    <i class="fa fa-home"></i><span>Home</span>
                <% end %>
                </li>
                <li class="active">
                <%= link_to trackers_path do %>
                    <i class="fa fa-table"></i><span>Trackers</span>
                <% end %>
                </li>
            </ul> 
        </aside>
        <article class="two-third half-1000 divider">
            <%= yield %>
        </article>
    </section>
</main>

<footer class="flex one">
    <div class="">
     <a href="https://github.com/deepredsky/Historical">Source</a>
    </div> 
</footer>
</body>
</html>
